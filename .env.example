# reM3 - reMarkable sync configuration
RM_HOST=10.11.99.1
RM_USER=root
RM_PASSWORD=

# Optional: Change base directory (default: ~/reM3)
# RM_BASE_DIR=

# Optional: Rendering settings
# RM_DPI=200

# OpenAI/OpenRouter API settings for transcription
OPENAI_API_KEY=your_openrouter_api_key_here
OPENAI_BASE_URL=https://openrouter.ai/api/v1
OPENAI_MODEL=openai/gpt-4o

# Cracked mode (multi-model transcription + merge)
CRACKED_MODE=true
CRACKED_MODELS=anthropic/claude-3.5-sonnet,openai/gpt-4o,qwen/qwen2.5-vl-32b-instruct
CRACKED_MERGE_MODEL=qwen/qwen2.5-vl-7b-instruct

# Optional: Processing settings
# RM_WORKERS=3
